@model starteAlkemy.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Detalles de Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>

<html lang="en">
<head>
    <!--Style-->
    <link rel="stylesheet" href="~/cssProject/style.css">
    <link rel="stylesheet" href="~/cssProject/style-responsive.css">
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <style>
    body { background-image: linear-gradient(rgba(255,255,255,.3), rgba(255,255,255,.3)), url('https://lh3.googleusercontent.com/pw/ACtC-3cMBSlIHlxOQBnoEfRlPJ6OpnVJY0YS1j7Y-QSWaSBDmxSBylBuMGpf_f6S5l046K3V4W4zBBQt6VrYg51dh8fPcmqsxhnsBWL_GpHYl2yCRWNTUJ2ya5TmJnZCkpWCeA-Knl6GwdFpVNqgKyYyBrE=w1673-h941-no?authuser=0'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; }
    </style>
</head>

<body>
    <section>



        @*<section class="section section-lg section-main-bunner section-main-bunner-filter">

                <div class="main-bunner-img" style="        background-image: url(@Model.LinksMms[0].LinkUrl);
                background-size: cover;"></div>


                <div class="main-bunner-inner">
                    <div class="container">
                        <div class="row row-50 justify-content-lg-center align-items-lg-center">
                            <div class="col-lg-12">
                                <div class="bunner-content-modern text-center">
                                    <h1>  @Model.LinksMms[0].LinkTitle  </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>*@
        <!--Content-->

        <div class="content" id="ajax-content">
            <div class="text-intro">
                <h1>@Model.TitleProject</h1>
                <div class="one-column">
                    <p>@Model.ProjectAddedDate.ToShortDateString()</p>
                </div>
                <div class="two-column">
                    <p>@Model.ContentProject</p>
                </div>

                <div class="clear"></div>
                <div class="container">
                    <div>
                        <div>

                            <br />
                            <div id="carouselExample" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    @{ var i = 1; }
                                    @foreach (var item in Model.LinksMms)
                                    {
                                        if (i == 1)
                                        {
                                    <div class="carousel-item active">
                                        <img class="img-responsive" alt="" width:auto height:auto src="@Html.DisplayFor(modelItem => item.LinkUrl)" />
                                        <div class="bunner-content-modern text-center">
                                            
                                        </div>

                                    </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="img-responsive" width="271" height:auto src="@Html.DisplayFor(modelItem => item.LinkUrl)" />
                                        

                                            </div>
                                        }
                                        i++;
                                    }
                                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Anterior</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Proximo</span>
                                    </a>
                                </div>
                            </div>
                            <br />
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <!--Scripts-->

        <script src="~/jsProject/jquery.min.js"></script>
        <script src="~/jsProject/jquery.easing.min.js"></script>
        <script src="~/jsProject/modernizr.custom.42534.js" type="text/javascript"></script>
        <script src="~/jsProject/jquery.waitforimages.js" type="text/javascript"></script>
        <script src="~/jsProject/typed.js" type="text/javascript"></script>
        <script src="~/jsProject/masonry.pkgd.min.js" type="text/javascript"></script>
        <script src="~/jsProject/imagesloaded.pkgd.min.js" type="text/javascript"></script>
        <script src="~/jsProject/jquery.jkit.1.2.16.min.js"></script>

        <script src="~/jsProject/script.js" type="text/javascript"></script>

        <script>
            $('#button, #buttons').on('click', function () {
                $(".opacity-nav").fadeToggle("slow", "linear");
                // Animation complete.
            });
        </script>

    </section>
</body>
</html>
