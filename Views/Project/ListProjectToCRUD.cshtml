@model  List<starteAlkemy.Models.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Listado de Proyectos para Editar/Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<section class="section section-xl">*@
<!doctype html>

<html lang="en">
<head>

    <!--<meta charset="utf-8">
    <title>Projects - THOMSOON - Portfolio with grid and modern simplicity style - download now!</title>
    <meta name="description" content="THOMSOON - Portfolio Masonry boxed layout. Clean and minimalist portfolio and photography.">
    <meta name="keywords" content="thomsoon, simplicity, theme, html5, download, masonry, showroom, creative ">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="thomsoon.com">-->
    @*<link rel="icon" type="image/png" href="img/icon.png" />*@

    <!--Style-->

    <link rel="stylesheet" href="~/cssProject/reset.css">
    <link rel="stylesheet" href="~/cssProject/style.css">
    <link rel="stylesheet" href="~/cssProject/style-responsive.css">



    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>

    <!--Content-->

    <div class="content" id="ajax-content">


        <div class="text-intro">
            <h1>@ViewBag.Title</h1>
        </div>


        <!--Portfolio grid-->
            <ul class="portfolio-grid">
                @foreach (var item in Model)
                {
                    if (Model.Count >= 0)
                    {
                        if (item!=null)
                        {
                            foreach (var aux in item.LinksMms)
                            {

                                if (aux != null)
                                {
                                    <li class="grid-item" data-jkit="[show:delay=3000;speed=500;animation=fade]">

                                        <a class="ajax-link">
                                            <img src="@aux.LinkUrl">
                                            <div class="grid-hover">

                                                <h1>@item.TitleProject</h1>


                                                @*<input type="button" value="Editar" class="btn btn-warning" style="padding:10px 20px" onclick="location.href='@Url.Action("Edit", "Project", new { id = item.Id }))'" />*@
                                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })

                                            </div>

                                        </a>
                                    </li>
                                }
                                break;
                            }
                        }
                    }
                }

            </ul>
    </div>

    <!--Scripts-->

    <script src="~/jsProject/jquery.min.js"></script>
    <script src="~/jsProject/jquery.easing.min.js"></script>
    <script src="~/jsProject/modernizr.custom.42534.js" type="text/javascript"></script>
    <script src="~/jsProject/jquery.waitforimages.js" type="text/javascript"></script>
    <script src="~/jsProject/typed.js" type="text/javascript"></script>
    <script src="~/jsProject/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="~/jsProject/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="~/jsProject/jquery.jkit.1.2.16.min.js"></script>

    <script src="~/jsProject/script.js" type="text/javascript"></script>

    <script>
        $('#button, #buttons').on('click', function () {
            $(".opacity-nav").fadeToggle("slow", "linear");
            // Animation complete.
        });
    </script>


</body>
</html>
@*</section>*@



