@model  List<starteAlkemy.Models.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Listado de Proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<section class="section section-xl">*@
<!doctype html>

<html lang="en">
<head>
        
    <!--Style-->

    <link rel="stylesheet" href="~/cssProject/reset.css">
    <link rel="stylesheet" href="~/cssProject/style.css">
    <link rel="stylesheet" href="~/cssProject/style-responsive.css">

    <style>
    body { background-image: linear-gradient(rgba(255,255,255,.3), rgba(255,255,255,.3)), url('https://lh3.googleusercontent.com/pw/ACtC-3coaDrnalRpUhtglj3Ogsz_N8fKIZFyZZ9id7ZfCTLejkvt9vSlhtqbVBil309vsQn6f2EZbmDR3kX75PJ7Mq9BLeXMp83m_T5ebS18IY92QOq1hxFuWfoUhAZoPvVBuUjGWytBJy8HHIwXQn5m_h4=w1255-h941-no?authuser=0'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; }
    </style>

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>
    <section>


        <!--Content-->

        <div class="content" id="ajax-content">


            <div class="text-intro">

                <h1>@ViewBag.Title</h1>
                <p>Este es el listado de todos nuestros proyectos en Starte</p>

            </div>


            <!--Portfolio grid-->

            <ul class="portfolio-grid" >
                @foreach (var item in Model)
                {
                    if (Model.Count >= 0)
                    {

                        foreach (var aux in item.LinksMms)
                        {


                            <li class="grid-item" data-jkit="[show:delay=3000;speed=500;animation=fade]" >
                                <img width="400" height="50" src="@aux.LinkUrl" >
                                <a class="ajax-link" href="@Url.Action("Details", "Project", new { id = item.Id })">
                                    <div class="grid-hover">
                                        <h1>@item.TitleProject</h1>
                                    </div>
                                </a>
                            </li>
                            
                            break;
                        }
                    }
                }
            </ul>

        </div>
       </section>
        <!--Scripts-->

        <script src="~/jsProject/jquery.min.js"></script>
        <script src="~/jsProject/jquery.easing.min.js"></script>
        <script src="~/jsProject/modernizr.custom.42534.js" type="text/javascript"></script>
        <script src="~/jsProject/jquery.waitforimages.js" type="text/javascript"></script>
        <script src="~/jsProject/typed.js" type="text/javascript"></script>
        <script src="~/jsProject/masonry.pkgd.min.js" type="text/javascript"></script>
        <script src="~/jsProject/imagesloaded.pkgd.min.js" type="text/javascript"></script>
        <script src="~/jsProject/jquery.jkit.1.2.16.min.js"></script>

        <script src="~/jsProject/script.js" type="text/javascript"></script>

        <script>
            $('#button, #buttons').on('click', function () {
                $(".opacity-nav").fadeToggle("slow", "linear");
                // Animation complete.
            });
        </script>


</body>
</html>
@*</section>*@



