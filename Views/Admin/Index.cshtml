@model starteAlkemy.Models.ViewModels.AdminViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section-xl">
    <br />
    <div class="row">
        <div class="col-md-12">
            <input type="button" name="btn btn-primary" onclick="document.location.href='@Url.Content("~/Admin/Create")'" value="Add Admin" />
        </div>
    </div>
    <div class="row">
        <form id="frm">
            <div class="form-group">
                @*Nombre del Administrador:
                    <input type="text" name="fullName" />*@
                Email del Administrador:
                <input type="text" name="email" />
                Contraseña:
                <input type="password" name="password" />
                <input type="submit" class="btn btn-success" value="Login" />
            </div>
        </form>
    </div>

    @section scripts{
        <script>
    $(document).ready(function () {
        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Admin/Login")"
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {
                if (data == "1") {
                     document.location.href = "@Url.Content("~/Home/Edit")"
                }
                else {
                    alert(data)
                }
            })
        })
    })
        </script>
    }
</section>