
@model  starteAlkemy.Models.ViewModels.HomeViewModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("PartialBackgroundDonateImagesPost", "Home",
    new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "donatelink",
        InsertionMode = InsertionMode.Replace
    }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Cargar imagen de fondo de "Donaciones":</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.BackgroundDonate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BackgroundDonate)
        </div>

        <p>
            <input type="submit" value="Cargar" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
    @Scripts.Render("~/bundles/jquery.validate.unobtrusive") @*For unobtrusive-ajax*@
}
