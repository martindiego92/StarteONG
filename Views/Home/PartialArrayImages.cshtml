
@model  starteAlkemy.Models.ViewModels.HomeImagesViewModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("PartialImagesPost", "Home",
    new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "linksDiv",
        InsertionMode = InsertionMode.Replace
    })) 
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Cargar Imágenes</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkImage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkImage)
        </div>

       
        <p>
            <input type="submit" value="Cargar" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
    @Scripts.Render("~/bundles/jquery.validate.unobtrusive") @*For unobtrusive-ajax*@
}