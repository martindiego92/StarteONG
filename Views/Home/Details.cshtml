@model starteAlkemy.Models.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section-xl">
    <h3>Detalles</h3>
    <br />
    <div class="container pt-3">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.WelcomeText)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.WelcomeText)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.MercadoPagoId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MercadoPagoId)
            </dd>
            <h1>Lista</h1>
            @foreach (var item in Model.ListLinks)
            {
                @Html.DisplayFor(modelItem => item.Text)
                @Html.DisplayFor(modelItem => item.LinkImage)}
        </dl>
    </div>


    <div class="container">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Volver al listado", "Index")
    </div>
</section>