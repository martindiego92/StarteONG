@model starteAlkemy.Models.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section-lg section-main-bunner section-main-bunner-filter">

    @if (Model.ImageMain != null && Model.ImageMain != "")
    {
        <div class="main-bunner-img" style="background-image: url(@Model.ImageMain); background-size: cover;"></div>
    }
    else
    {
        <div class="main-bunner-img" style="background-image: url(/../images/bg-bunner-2.jpg); background-size: cover;"></div>
    }
    <div class="main-bunner-inner">
        <div class="container">
            <div class="row row-50 justify-content-lg-center align-items-lg-center">
                <div class="col-lg-12">
                    <div class="bunner-content-modern text-center">
                        <h1 class="main-bunner-title">@Model.WelcomeText</h1>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="parallax-container bg-gray-600" data-parallax-img="@Model.BackgroundOurMission">
    <div class="container">
        <div class="row row-50 justify-content-lg-between align-items-lg-center">
            <div class="col-lg-6">
                <div class="box-img-animate">
                    @if (Model.ListLinks.Count > 0)
                    {
                        if (Model.ListLinks.Count >= 1)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;: 0, &quot;x&quot;: 140,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[0].LinkImage" alt="" width="271" height:auto></div>
                        }
                        if (Model.ListLinks.Count >= 2)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;: 150, &quot;x&quot;: 0,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[1].LinkImage" alt="" width="271" height:auto></div>}
                        if (Model.ListLinks.Count >= 3)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:70, &quot;x&quot;: -250,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[2].LinkImage" alt="" width="271" height:auto></div>}
                        if (Model.ListLinks.Count >= 4)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:20, &quot;x&quot;: 20,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[3].LinkImage" alt="" width="339" height:auto></div>}
                        if (Model.ListLinks.Count >= 5)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:60, &quot;x&quot;: 70,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[4].LinkImage" alt="" width="179" height:auto></div>}
                        if (Model.ListLinks.Count >= 6)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:0, &quot;x&quot;: 140,  &quot;smoothness&quot;: 50 }"><img src="@Model.ListLinks[5].LinkImage" alt="" width="217" height:auto></div>}
                    }
                    else
                    {
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;: 0, &quot;x&quot;: 140,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-1.jpg" alt=""></div>
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;: 150, &quot;x&quot;: 0,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-2.jpg" alt=""></div>
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:70, &quot;x&quot;: -250,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-3.jpg" alt=""></div>
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:20, &quot;x&quot;: 20,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-4.jpg" alt=""></div>
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:60, &quot;x&quot;: 70,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-5.jpg" alt=""></div>
                        <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;:0, &quot;x&quot;: 140,  &quot;smoothness&quot;: 50 }"><img src="~/images/animate-img-6.jpg" alt=""></div>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-xl-5">
                <div class="innset-xl-left-70">
                    <h3>@Model.TitleOurMission</h3>
                    <p class="text-opacity-80">@Model.DescOurMission</p>
                    <div class="row row-50">
                        <div class="col-md-6 col-lg-12">
                            <div class="box-icon-modern">
                                <div class="box-icon-inner decorate-triangle"><span class="icon-xl linearicons-camera2 icon-primary"></span></div>
                                <div class="box-icon-caption">
                                    <h4><a >@Model.TitleItemOneOurMission</a></h4>
                                    <p>@Model.DescItemOneOurMission</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-12">
                            <div class="box-icon-modern">
                                <div class="box-icon-inner decorate-circle"><span class="icon-xl linearicons-brush2 icon-primary"></span></div>
                                <div class="box-icon-caption">
                                    <h4><a >@Model.TitleItemTwoOurMission</a></h4>
                                    <p>@Model.DescItemTwoOurMission</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-12">
                            <div class="box-icon-modern">
                                <div class="box-icon-inner decorate-rectangle"><span class="icon-xl linearicons-tennis icon-primary"></span></div>
                                <div class="box-icon-caption">
                                    <h4><a >@Model.TitleItemThreeOurMission</a></h4>
                                    <p>@Model.DescItemThreeOurMission</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="parallax-container bg-gray-600" data-parallax-img="@Model.BackgroundProject">

    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-9 col-lg-7 wow-outer">
                <div class="wow slideInDown">
                    <h3>Ultimos Proyectos</h3>
                    <p>En Starte existen diversas causas y proyectos solidarios, en los que siempre puedes participar. No dude en conocerlos a continuación o navegar por nuestro sitio web para obtener más información.</p>
                </div>
            </div>
        </div>
        <div class="row row-50">
            @if (Model.ListProjects.Count > 0)
            {

                <div class="col-md-6 col-lg-4 wow-outer">
                    <div class="wow fadeInUp">
                        <article class="box-causes">

                            <div class="box-causes-img">
                                <img src="@Model.ListProjects[Model.ListProjects.Count - 1].LinksMms[0].LinkUrl" alt="" width="372" height="396" /><a class="button button-sm button-primary" href="@Url.Action("Details", "Project", new { id = @Model.ListProjects[Model.ListProjects.Count - 1].Id })">Detalles</a>
                            </div>
                            <h4 class="font-weight-medium"><a>@Model.ListProjects[Model.ListProjects.Count - 1].TitleProject</a></h4>
                            <p class="box-causes-donate">
                                <span class="box-causes-donate-complete">@Model.ListProjects[Model.ListProjects.Count - 1].DescProject</span>
                            </p>
                        </article>
                    </div>
                </div>
            }
            @if (Model.ListProjects.Count > 1)
            {
                <div class="col-md-6 col-lg-4 wow-outer">
                    <div class="wow fadeInUp">
                        <article class="box-causes">
                            <div class="box-causes-img">
                                <img src="@Model.ListProjects[Model.ListProjects.Count - 2].LinksMms[0].LinkUrl" alt="" width="372" height="396" /><a class="button button-sm button-primary" href="@Url.Action("Details", "Project", new { id = @Model.ListProjects[Model.ListProjects.Count - 2].Id })">Detalles</a>
                            </div>
                            <h4 class="font-weight-medium"><a >@Model.ListProjects[Model.ListProjects.Count - 2].TitleProject</a></h4>
                            <p class="box-causes-donate">
                                <span class="box-causes-donate-complete">@Model.ListProjects[Model.ListProjects.Count - 2].DescProject</span>
                            </p>
                        </article>
                    </div>
                </div>
            }
            @if (Model.ListProjects.Count > 2)
            {
                <div class="col-md-6 col-lg-4 wow-outer">
                    <div class="wow fadeInUp">
                        <article class="box-causes">
                            <div class="box-causes-img">
                                <img src="@Model.ListProjects[Model.ListProjects.Count - 3].LinksMms[0].LinkUrl" alt="" width="372" height="396" /><a class="button button-sm button-primary" href="@Url.Action("Details", "Project", new { id = @Model.ListProjects[Model.ListProjects.Count - 3].Id })">Detalles</a>
                            </div>
                            <h4 class="font-weight-medium"><a>@Model.ListProjects[Model.ListProjects.Count - 3].TitleProject</a></h4>
                            <p class="box-causes-donate">
                                <span class="box-causes-donate-complete">@Model.ListProjects[Model.ListProjects.Count - 3].DescProject</span>
                            </p>
                        </article>
                    </div>
                </div>
            }

        </div>

    </div>
    
</section>
<section class="parallax-container bg-gray-600" data-parallax-img="@Model.BackgroundDonate" id="donar">
    <div class="parallax-content section-xxl text-center" >
        <div class="container" >
            <div class="row justify-content-md-center">
                <div class="col-md-9 col-lg-8 col-xl-8 wow-outer">
                    <div class="innset-xl-right-30 innset-xl-left-30">
                        <div class="wow slideInDown">
                            <div class="donateend">
                                <h3 style="color:white">AYUDANOS</h3>
                                <h4 style="color:white">Numero de cuenta: @Model.NumeroDeCuenta</h4>
                                <h4 style="color:white">Cbu : @Model.Cbu</h4>
                                <h4 style="color:white">Alias:  @Model.Alias</h4>
                                <h4 style="color:white">Cuenta de Mercado Pago:  @Model.MercadoPagoId</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



